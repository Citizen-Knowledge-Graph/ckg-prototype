@prefix ckg: <http://ckg.de/default#> .
@prefix sh:  <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

ckg:metadata
    ckg:author          ckg:benjaminaaron ;
    ckg:created         "2023-10-26"^^xsd:date ;
    ckg:title           "Checks if house owners are eligible for funding for solar panels" ;
    ckg:queryType       ckg:dev ;
    ckg:targetGroup     ckg:Citizen ;
    ckg:fundingProvider ckg:GermanState .

ckg:SparqlPrefixes
    sh:declare [
                   sh:namespace "http://ckg.de/default#"^^xsd:anyURI ;
                   sh:prefix "ckg" ;
               ] ;
.

ckg:TypeDeclarationShape
    a             sh:NodeShape ;
    sh:targetNode ckg:this ;
    sh:property   [ sh:path     rdf:type ;
                    sh:hasValue ckg:CitizenProfile ;
                    sh:minCount 1 ; ] .

ckg:CitizenOwnsHouseShape
    a              sh:NodeShape ;
    sh:targetClass ckg:Citizen ;
    sh:property    [ sh:path                ckg:owns ;
                     sh:qualifiedValueShape [ sh:class
                                                      ckg:House ; # Shape that values must conform to, in this case, a House
                                            ] ;
                     sh:qualifiedMinCount   1 ; # At least one value must conform to the above shape
                   ] .

ckg:HouseEligibleForSolarFundingShape
    a              sh:NodeShape ;
    sh:targetClass ckg:House ;
    sh:property    [ sh:path         ckg:roofArea ;
                     sh:minCount     1 ;
                     sh:datatype     xsd:integer ;
                     sh:minInclusive 100 ;
                     sh:message      "100" ; ] ;
    sh:property    [ sh:path         ckg:groundArea ;
                     sh:minCount     1 ;
                     sh:datatype     xsd:integer ;
                     sh:minInclusive 80 ;
                     sh:message      "100" ; ] ;
    sh:property    [ sh:path         ckg:houseAge ;
                     sh:minCount     1 ;
                     sh:datatype     xsd:integer ;
                     sh:maxInclusive 20 ;
                     sh:message      "20" ; ] ;
    sh:sparql      [ a           sh:SPARQLConstraint ;   # This triple is optional
                     sh:message  "Combined roof area and ground area must be greater than 150" ;
                     sh:prefixes ckg:SparqlPrefixes ;
                     sh:select   """
			SELECT $this
			WHERE {
				$this ckg:roofArea ?roofArea .
				$this ckg:groundArea ?groundArea .
				BIND((?roofArea + ?groundArea) AS ?aggregateValue)
				FILTER(?aggregateValue <= 150)
			}
			""" ; ] .
