@prefix ckg: <http://ckg.de/default#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ckg:metadata ckg:author ckg:benjaminaaron ;
             ckg:created "2023-10-26"^^xsd:date ;
             ckg:title "Checks if house owners are eligible for solar funding" ;
             ckg:queryType ckg:dev ;
             ckg:targetGroup ckg:citizens .

ckg:HouseEligibleForSolarFundingShape
    a sh:NodeShape ;
    sh:targetClass ckg:House ;
    sh:property [
        sh:path ckg:roofArea ;
        sh:datatype xsd:integer ;
        sh:minInclusive 100 ;
        sh:message "Roof area is below the minimum required" ;
    ] ;
    sh:property [
        sh:path ckg:houseAge ;
        sh:datatype xsd:integer ;
        sh:minInclusive 30 ;
        sh:message "House age is below the minimum required" ;
    ] .
